extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")



block content
    main
        if editing
            form.product-form(action='/admin/edit-product', method="POST")
                .form-control
                    label(for="title") Title
                    input#title(type="text", name="title", value=product.title)
                    .form-control
                        label(for="imageUrl") Image Url
                        input#imageUrl(type="text", name="imageUrl", value=product.imageUrl)
                    .form-control
                        label(for="price") Price
                        input#price(type="number", name="price", step="0.01", value=product.price)
                    .form-control
                        label(for="description") Description
                        textarea#description(name="description", rows="5") #{product.description} 
                    if editing
                        input(type="hidden", name="productId" value=product._id)
                        button.btn(type="submit") Update Product
                    else 
                        button.btn(type="submit") Add Product
        else
            form.product-form(action='/admin/add-product', method="POST")
                .form-control
                    label(for="title") Title
                    input#title(type="text", name="title")
                .form-control
                    label(for="imageUrl") Image Url
                    input#imageUrl(type="text", name="imageUrl")
                .form-control
                    label(for="price") Price
                    input#price(type="number", name="price", step="0.01")
                .form-control
                    label(for="description") Description
                    textarea#description(name="description", rows="5") 
                if editing
                    input(type="hidden", name="productId" value=product._id)
                    button.btn(type="submit") Update Product
                else 
                    button.btn(type="submit") Add Product
