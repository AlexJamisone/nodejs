extends ../layouts/main-layout.pug
block styles 
    link(rel="stylesheet", href="/css/orders.css")

block content
    main 
        if orders.length <= 0
            h1 Nothing here!
        else 
            ul.orders
                each order in orders 
                    li.orders__item 
                        h1 # #{order._id}
                    ul.orders__products
                        each items in order.items
                            li.orders__products-item #{items.title} (#{items.quantity})
                            
