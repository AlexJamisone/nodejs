extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/auth.css")
    link(rel="stylesheet", href="/css/forms.css")

block content
    main 
        if (errorMessage)
            .user-message.user-message--error #{errorMessage} 
        form.login-form(action="/singup", method="POST", novalidate )
            .form-control 
                input.form__input#email(type="email", placeholder=" ", name="email", value=oldInput.email, class=validationErrors.find(e => e.param === 'email') ? 'invalid' : '')
                label.form__label(for="email") Email    
            .form-control 
                input.form__input#password(type="password", placeholder=" ", name="password", value=oldInput.password, class=validationErrors.find(e => e.param === 'password') ? 'invalid' : '')
                label.form__label(for="password") Password
            .form-control
                input.form__input#confirmPassword(type="password", placeholder=" ", name="confirmPassword", value=oldInput.confirmPassword, class=validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '')
                label.form__label(for="confirmPassword") Confirm Password 
            input(type="hidden", name="_csrf" value=csurfToken)
            button.btn(type="submit") Signup