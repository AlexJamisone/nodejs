extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")



block content
    main
        if (errorMessage)
            .user-message.user-message--error #{errorMessage} 
        form.login-form(action='/login', method="POST")
            .form-control
                input.form__input#email(type="email", placeholder=" ", name="email")
                label.form__label(for="email") E-mail
            .form-control
                input.form__input#password(type="password", placeholder=" ", name="password")
                label.form__label(for="password") Password
            input(type="hidden", name="_csrf" value=csurfToken)
            button.btn(type="submit") Login